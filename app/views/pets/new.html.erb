<div class="content">

  <h1 class="header">Enter A New Shelter Pet</h1>

  <section class="bold">
    <%= form_tag "/shelters/#{@shelter.id}/pets" do %>
      <%= label_tag :name %><br>
      <%= text_field_tag :name %><br><br>
      <%= label_tag :description %><br>
      <%= text_area_tag :description %><br><br>
      <%= label_tag :image %><br>
      <%= text_field_tag :image %><br><br>
      <%= label_tag :age %><br>
      <%= number_field_tag :age %><br><br>
      <%= label_tag :female %><br>
      <%= radio_button_tag :sex, :female %><br><br>
      <%= label_tag :male %><br>
      <%= radio_button_tag :sex, :male %><br>
      <%= hidden_field_tag :adoptable, true %>
      <%= submit_tag "Create Pet" %>
    <%end %>
  </section>



</div>
