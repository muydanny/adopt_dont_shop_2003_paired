<div class="content">
  <h1 class = "header">Create a new Review</h1>

  <%= form_for @review, url: {action: "create"} do |f| %>
    <%= label_tag(:title) %>
    <br>
    <%= f.text_field :title %>
    <br>
    <%= label_tag(:rating) %>
    <br>
    <%= f.text_field :rating %>
    <br>
    <%= label_tag(:content) %>
    <br>
    <%= f.text_field :content %>
    <br>
    <%= label_tag(:image) %>
    <br>
    <%= f.text_field :image %>
    <br>
    <%= f.submit "Submit", class: "grey hover" %>
  <% end %>
</div>
