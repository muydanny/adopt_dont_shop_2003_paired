
<div class="content">

  <h1 class="header">Enter A New Shelter</h1>

<section class="bold">
  <%= form_tag '/shelters' do %>
    <%= label_tag :name%><br>
    <%= text_field_tag :name%><br><br>
    <%= label_tag :address%><br>
    <%= text_field_tag :address%><br><br>
    <%= label_tag :city%><br>
    <%= text_field_tag :city%><br><br>
    <%= label_tag :state%><br>
    <%= text_field_tag :state, nil, maxlength: 2, minlength:2%><br><br>
    <%= label_tag :zip%><br>
    <%= text_field_tag :zip, nil, maxlength:5, minlength:5%><br><br>
    <%= submit_tag  "Create Shelter"%>
  <% end %>
</section>


</div>
