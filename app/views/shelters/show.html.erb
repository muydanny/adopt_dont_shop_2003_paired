
  <div class="content">
    <section class = "pet-list">

    <h1 class="header">Shelter Details</h1>
    <h2 class="bold">Name: <%= @shelter.name %></h2>
    <p class="bold"> Pet Count: <%= @shelter.pets.count %></p>
    <p class="bold">Address: <%= @shelter.address %></p>
    <p class="bold">City: <%= @shelter.city %></p>
    <p class="bold">State: <%= @shelter.state %></p>
    <p class="bold">Zip: <%= @shelter.zip %></p> <br>
  </section>

  <section class = "pet-list">
    <h2 class="header-right">Pet Settings</h2>
    <p><a class="edit" href="/shelters/<%= @shelter.id %>/pets/new">Create Pet</a></p>

  <a class="edit" href="/shelters/<%= @shelter.id%>/pets">See Adoptable Pets!</a>
  <br><br>

  </section>


<section class="pet-list">
  <h2 class="header-right">Shelter Settings</h2>
  <p><a class="edit" href="/shelters/<%= @shelter.id %>/edit">Update Shelter</a></p>

  <%= link_to "Review this shelter!", "/shelters/#{@shelter.id}/new_review", method: "get", class: "grey hover"%>
<br><br>
</section><br>

<section class="pet-list">
  <h2 class="header-right">Reviews for <%= @shelter.name.capitalize %></h2>
  <% (@shelter.reviews || []).each do |review| %>
  <section id="review-<%= review.id %>">

    <h3><u><%= review.title %></u></h3>
    <p><%= review.content %></p>
    <p><b>Rating:</b> <%= review.rating %></p>
    <% if review.image != "" %>
    <img class = "pet-image-small" id="<%= "review-image-#{review.id}" %>" src="<%= review.image %>"/>
    <% end %>
    <br><br>
    <%= link_to "Edit Review", "/shelters/#{@shelter.id}/reviews/#{review.id}/edit", method: "get", class: "grey hover" %>
    <%= link_to "Delete Review", "/shelters/#{@shelter.id}/reviews/#{review.id}", method: "delete", class: "grey hover" %>
    <br><br>
  </section>
  <% end %>
</section><br>

<section class="pet-list">
  <h2 class="header-right"> Delete </h2>
  <% if @shelter.pets.count == 0 %>
  <section class="delete-form">
    <%= button_to "Delete #{@shelter.name}", "/shelters/#{@shelter.id}", method: :delete %>
  </section>
  <% else %>
  <p class="italics">Cannot delete shelter while it has pets</p>
  <% end %><br><br>
</section><br><br>

</div>
